{
  "name": "todomvc-es6-custom",
  "version": "0.2.0",
  "description": "Simple TodoMVC Application with vanilla ES6",
  "author": "Ueli Kunz <kunz@ideadapt.net>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development rm -rf .cache && npx parcel ${DIR:-src}/app/index.html",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "npx mocha ${DIR:-src}/test/unit/**.js",
    "hub": "npx selenium-standalone start",
    "test:e2e": "npx mocha ${DIR:-src}/test/e2e/*.test.js --timeout 5000"
  },
  "devDependencies": {
    "@babel/cli": "7.7.5",
    "@babel/core": "7.7.5",
    "@babel/polyfill": "7.7.0",
    "@babel/preset-env": "7.7.6",
    "@babel/register": "7.7.4",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chromedriver": "2.46.0",
    "eslint": "6.7.2",
    "he": "1.2.0",
    "mocha": "6.2.2",
    "parcel": "1.12.4",
    "selenium-standalone": "6.17.0",
    "selenium-webdriver": "3.6.0",
    "sinon": "7.5.0"
  },
  "dependencies": {
    "todomvc-app-css": "2.3.0"
  }
}
